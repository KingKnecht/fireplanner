{
  "name": "fireplanner",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron.cjs",
  "scripts": {
    "dev": "vite",
    "build:preload": "tsc electron/preload.ts --outDir dist-electron --module esnext --target esnext --moduleResolution bundler --skipLibCheck",
    "electron:dev": "npm run build:preload && vite & sleep 2 && NODE_ENV=development ELECTRON_DISABLE_SECURITY_WARNINGS=true electron .",
    "build": "npm run build:preload && vue-tsc -b && vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "pinia": "^2.3.1",
    "pinia-plugin-history": "^1.3.0",
    "vue": "^3.5.25"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/tsconfig": "^0.8.1",
    "electron": "^40.3.0",
    "electron-builder": "^26.7.0",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vue-tsc": "^3.1.5"
  },
  "build": {
    "appId": "com.fireplanner.app",
    "productName": "FirePlanner",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "dist-electron",
      "electron.cjs"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
