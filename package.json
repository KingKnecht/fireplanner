{
  "name": "fireplanner",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "author": "Sven Bardos",
  "description": "A project planning tool",
  "license": "MIT",
  "main": "electron.cjs",
  "scripts": {
    "dev": "vite",
    "dev:electron": "npm run build:preload && concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development ELECTRON_DISABLE_SECURITY_WARNINGS=true electron .\"",
    "build:preload": "tsc electron/preload.ts --outDir dist-electron --module commonjs --target es2020 --moduleResolution node --skipLibCheck",
    "clean:dev": "lsof -ti:5173 | xargs kill -9 2>/dev/null || true",
    "electron:dev": "npm run clean:dev && npm run dev:electron",
    "build": "npm run build:preload && vue-tsc -b && vite build && electron-builder",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@primeuix/themes": "^2.0.3",
    "nanoid": "^5.1.6",
    "pinia": "^2.3.1",
    "pinia-plugin-history": "^1.3.0",
    "primevue": "^4.5.4",
    "vue": "^3.5.25"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/ui": "^4.0.18",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.3.0",
    "electron-builder": "^26.7.0",
    "happy-dom": "^20.6.1",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vue-tsc": "^3.1.5",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.fireplanner.app",
    "productName": "FirePlanner",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "dist-electron",
      "electron.cjs",
      "config.json",
      "assets"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/fireplanner_256x256.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office",
      "icon": "assets/fire_planner_512x512.png"
    }
  }
}
